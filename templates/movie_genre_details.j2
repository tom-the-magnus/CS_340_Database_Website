<html>
<!-- Adapted from the people.html UI design -->
<head>
	<title>Movie Genre Details</title>
	<link href="style.css" rel="stylesheet" type="text/css" />
	<script language="JavaScript">
	function showform(dowhat) {
		/*
		 * four DIVS: browse, insert, update, delete
		 * this function sets one visible the others not
		 */
		if(dowhat == 'insert') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'delete') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'block';
		} else if(dowhat == 'all') {
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'block';
			document.getElementById('delete').style.display = 'block';
		} else { //by default display browse
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		}
	}

	function newMovieGenreDetail() {
		showform('insert');
	}

	function updateCustomer(pid) {
		showform('update');
	}

	function deleteMovieGenreDetail(pid) {
		showform('delete');
	}

	function browseMovieGenreDetails() {
		showform('browse');
	}

	function showAll() {
		showform('all');
	}
	</script>
</head>

<body onload="browseMovieGenreDetails()">
	<h1>Movie Genre Details</h1> [ <a href="index">Homepage</a>  | <a href="rentals">Rentals</a> | <a href="customers">Customers</a>  | <a href="movies">Movies</a> | <a href="genres">Genres</a> |<a href="movie_genre_details">Movie Genre Details</a> ]
	<div id="browse">
		<p> Browse all movies and genres they belong to. Select add new or delete to update the movie genre catalog. </p>
		<p><a href="#" onClick="newMovieGenreDetail()">Add New</a> </p>
		<table border="1" cellpadding="5">
			<!-- Access details tuple passed from Flask route -->
			{% if details %}
				<thead>
					<tr>
						<!-- Iterate through each key in the first entry to get the column name -->
						{% for key in details[0].keys() %}
							<!-- Create a <th> tag with the key inside of it, this will be our header row -->
							<th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
						{% endfor %}
						<th scope="col">Edit</th>
						<th scope="col">Delete</th>
					</tr>
				</thead>
				<tbody>
					<!-- Now, iterate through every item in details -->
					{% for item in details %}
						<tr>
							<!-- Then iterate through every key in the current item dictionary -->
							{% for key in item.keys() %}
								<!-- Create a <td> element with the value of that key in it -->
								<td> {{ item[key] }} </td> 
							{% endfor %}
							<!-- Create our edit/delete button -->
							<td><a href="edit_movie_genre_details/{{ item.movie_genre_id }}" class="btn btn-default">Edit</a></td>
							<td><a href="delete_movie_genre_details/{{ item.movie_genre_id }}" class="btn btn-default">Delete</a></td>
						</tr> 
					{% endfor %}
				</tbody>
			{% else %}
				<p>No movie genre details found.</p>
			{% endif %}
		</table>   
	</div> <!-- browse -->

	<div id="insert">
		<!-- form to INSERT new data into MovieGenreDetails-->
		<form id="insertMovieGenreDetail" action="/movie_genre_details" method="post">
			<legend><strong>Add Movie Genre Detail</strong></legend>
			<fieldset>
				<label for="movie_id">Movie:</label>
				<select name="movie_id" id="movie_id" required>
					{% for movie in movies %}
					<option value="{{ movie.movie_id }}">{{ movie.title }}</option>
					{% endfor %}
				</select>

				<label for="genre_id">Genre:</label>
				<select name="genre_id" id="genre_id" required>
					{% for genre in	 genres %}
					<option value="{{ genre.genre_id }}">{{ genre.genre_name }}</option>
					{% endfor %}
				</select>

				<!-- Create 'Add Movie Genre Details' and 'Cancel' buttons -->
				<input type="submit" value="Add Movie Genre Detail" name="Add_Movie_Genre_Detail" class="btn btn-primary" style="margin:.5rem;">
				<input class="btn" type="button" value="Cancel" onClick="browseMovieGenreDetails()"> 
			</fieldset>
		</form>
	</div><!--insert-->
	<div id="edit" style="display:none;">
		<!-- This section should be hidden initially and only shown when needed -->
		<!-- There should be a JavaScript function to populate these values when editing an item -->
		<form id="editMovieGenreDetail" method="post">
			<!-- The action attribute should be dynamically set by JavaScript when an edit button is clicked -->
			<legend><strong>Edit Movie Genre Detail</strong></legend>
			<fieldset>
				<!-- Hidden input for Movie Genre ID should also be set dynamically by JavaScript -->
				<input type="hidden" id="movie_genre_id" name="movie_genre_id">

				<label for="movie_id">Movie:</label>
				<select name="movie_id" id="movie_id" required>
					{% for movie in movies %}
					<option value="{{ movie.movie_id }}">{{ movie.title }}</option>
					{% endfor %}
				</select>

				<label for="genre_id">Genre:</label>
				<select name="genre_id" id="genre_id" required>
					{% for genre in genres %}
					<option value="{{ genre.genre_id }}">{{ genre.genre_name }}</option>
					{% endfor %}
				</select>

				<input class="btn" type="submit" value="Edit Movie Genre Detail" name="Edit_Movie_Genre_Detail" style="margin:.5rem;">
				<input class="btn" type="button" value="Cancel" onClick="browseMovieGenreDetails()"> 
			</fieldset>
		</form>
	</div><!--edit-->
</body>
</html>